<h1 class="text-center">Add a new Flat</h1>
<div class="container">
<%= simple_form_for @flat do |f| %>
  <%=f.input :name %>
  <%=f.input :address %>
  <%=f.input :description %>
  <%=f.input :price_per_nigh %>
  <%=f.input :number_of_guests %>
  <%=f.submit class: 'btn btn-success' %>
<%end%>
</div>
